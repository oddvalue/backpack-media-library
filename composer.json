{
    "name": "oddvalue/backpack-media-library",
    "type": "library",
    "description": "A media manager built for Backpack for Laravel",
    "keywords": [
        "oddvalue",
        "backpack-media-library"
    ],
    "homepage": "https://github.com/oddvalue/backpack-media-library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jim Hollington",
            "email": "jim@oddvalue.co.uk",
            "homepage": "https://github.com/oddvalue",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Oddvalue\\BackpackMediaLibrary\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oddvalue\\BackpackMediaLibrary\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
